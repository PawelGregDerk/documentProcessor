<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10"
      xmlns="http://javafx.com/javafx/23.0.2"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="by.vstu.isit.documentprocessor.controllers.SborEdFormController">

    <Label text="Сборочная единица"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="180"/>
            <ColumnConstraints minWidth="320"/>
        </columnConstraints>

        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idField"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="1"/>

        <Label text="Пакет документов:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="docpackageBox"
                  GridPane.rowIndex="1"
                  GridPane.columnIndex="1"/>

        <Label text="Наименование:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="nazvField"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="1"/>

        <Label text="Обозначение:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="oboznachField"
                   GridPane.rowIndex="3"
                   GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Сохранить"
            onAction="#handleSave"
            maxWidth="Infinity"/>
</VBox>

