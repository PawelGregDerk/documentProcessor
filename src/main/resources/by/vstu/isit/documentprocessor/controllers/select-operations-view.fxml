<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="by.vstu.isit.msworddocsprocessing.controllers.OperationToDocxController"
            prefWidth="600" prefHeight="400"
            stylesheets="@/css/style.css">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <VBox fx:id="operationsContainer" spacing="10.0">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="isWrote" text="%select.op.action" />
            <Button fx:id="writeButton" text="%create.docx" onAction="#toDocxButtonClick" />
        </HBox>
    </bottom>
    <ImageView fx:id="loadingGif"
               visible="false"
               fitWidth="64" fitHeight="64"
               preserveRatio="true">
        <image>
            <Image url="@/images/loading.gif" />
        </image>
    </ImageView>
</BorderPane>